<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        
        <title>Old phone deals</title>
    
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.css" rel="stylesheet" />
    </head>
    <body style="background: url('images/homeBg.jpg')">
      <style>
        .navbar-custom {
            background-color: lightgreen;
        }
      </style>
      <nav class="navbar navbar-expand-lg navbar-light navbar-custom">
        <a class="navbar-brand" href="/">Old phone deals</a>
        
        </button>
        <div class="container">
            <div class="row">
              <div class="col-md-3  mt-2">
                  <form class="form-inline">
                      <div class="input-group">
                          <input class="form-control" type="search" placeholder="Search" aria-label="Search" id="searchInput">
                          
                          <button class="btn btn-outline-success" type="submit" id="searchButton">Search</button>
                          
                      </div>
                  </form>
              </div>
              <div class="col-md-2 mt-2">
                
                <div clase="form-inline">
                  <div class="input-group">
                    <select class="form-control" id="selectBrand">
                      <option value="">All brands</option>
                      <option value="apple">Apple</option>
                      <option value="sony">Sony</option>
                      <option value="samsung">Samsung</option>
                      <option value="nokia">Nokia</option>
                      <option value="motorola">Motorola</option>
                      <option value="lg">LG</option>
                      <option value="huawei">Huawei</option>
                      <option value="htc">HTC</option>
                      <option value="blackberry">Blackberry</option>
                    </select>
                  
                    
                  </div>
                </div>
              </div>

              <div class="col-md-3">
                <label for="slider">Maximum price:</label>
                <span id="sliderValue">0</span>
                <input type="range" class="form-range" id="slider" min="10" max="1000" step="10" oninput="updateValue(this.value)">
                
              </div>
              <div class="col-sm-1">
                <button class="btn btn-outline-success btn-sm" type="submit" id="setMaximum">Set Maximum</button>
              </div>
              <div class="col-sm-1 mt-1 ">
                <button class="btn btn-outline-success btn-sm" type="submit" id = "checkout">Checkout</button>

              </div>
              
              <div class="col-md-2 ">
              <ul class="navbar-nav">
                
                <% if (loginstatus==true) { %>
                  <a class="nav-link" href="/user">Profile</a>
                  <a class="nav-link" href="/logout" id="logout">Signout</a>
              <% }else{ %>
                  
                  <a class="nav-link" href="/login">Account</a>
              <% } %>               
              </ul> 
              <script>
                document.getElementById('logout').addEventListener('click', function(event){
                    if(!confirm("Are you sure you want to sign out?")){
                        event.preventDefault();
                    }
                });
                </script> 
              </div>
            </div>
          </div>
      </nav>
        <section >

            <div class="container my-5">
                <div class="row">
                <!-- Sold out soon -->
                  <div class="col-md-12 border "> 
                    <div class=" p-3">
                      <h2 class="text-center">Search Result</h2>
                      <style>
                        .table td {
                            background-color: white;
                        }
                        .table th {
                            background-color: lightgreen;
                        }
                      </style>
                        <table class="table">
                        <thead>
                        <tr>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Brand</th>
                            <th>Price</th>
                            <th>Stock</th>
                        </tr>
                        </thead>
                        <tbody id="resultBody">

                          <% if (searchList) { %>
                            <% searchList.forEach(phone =>{%>
                                <tr id= <%=phone._id %> onclick= "window.location.href='/item?id=<%=phone._id %>'">

                                <td><img src= <%= phone.image %> class="img-thumbnail" ></td>
                                
                                <td><%= phone.title %></td>
                                <td><%= phone.brand %></td>
                                <td>$<%= phone.price %></td>
                                <td class="text-center"><%= phone.stock %></td>

                                </tr>
                            <% }); %>
                            
                          <% } %>
                        </tbody>
                        </table>
                    </div>
                  </div>
                </div>
              </div>

        </section>
        <!-- Footer-->
        <footer class="py-5 bg-dark">
            <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Your Website 2023</p></div>
        </footer>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="javascript/search.js"></script>
        

    </body>
</html>
