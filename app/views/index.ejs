<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        
        <title>Old phone deals</title>
    
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.css" rel="stylesheet" />
    </head>
    <body style="background: url('images/homeBg.jpg')">
        <style>
            .navbar-custom {
                background-color: lightgreen;
            }
        </style>
        <nav class="navbar navbar-expand-lg navbar-light navbar-custom">
            <a class="navbar-brand" href="/">Old phone deals</a>
            
            </button>
            <div class="container">
                <div class="row">
                  <div class="col-md-6">
                      <form class="form-inline">
                          <div class="input-group">
                              <input class="form-control" type="search" placeholder="Search" aria-label="Search" id="searchInput">
                              
                              <button class="btn btn-outline-success" type="submit" id="searchButton">Search</button>
                              
                          </div>
                      </form>
                  </div>
                  <div class="col-sm-4 mt-1 ml-5">
                    <button class="btn btn-outline-success btn-sm" type="submit" id = "checkout">Checkout</button>
    
                  </div>
                  
                  <div class="col-md-2">
                  <ul class="navbar-nav ">
                    
                    <% if (loginstatus==true) { %>
                        <a class="nav-link" href="/user">Profile</a>
                        <a class="nav-link" href="/logout" id="logout">Signout</a>
                    <% }else{ %>
                        
                        <a class="nav-link" href="/login">Account</a>
                    <% } %>
                  </ul>
                  <script>
                    document.getElementById('logout').addEventListener('click', function(event){
                        if(!confirm("Are you sure you want to sign out?")){
                            event.preventDefault();
                        }
                    });
                    </script>  
                  </div>
                </div>
            </div>    
          </nav>
        
        <section >
            
            <div class="container my-5">
                <div class="row">
                <!-- Sold out soon -->
                  <div class="col-md-6 float-left border "> 
                    <div class=" p-3">
                        <style>
                            .table td {
                                background-color: white;
                            }
                            .table th {
                                background-color: lightgreen;
                            }
                        </style>
                      <h2>Sold out soon</h2>
                        <table class="table">
                        <thead>
                        <tr>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Price</th>
                            <th>Stock</th>

                            
                            
                        </tr>
                        </thead>
                        <tbody>

                          
                        <% soldoutList.forEach(phone =>{%>
                        <tr id= <%=phone._id %> onclick= "window.location.href='/item?id=<%=phone._id %>'">
                            
                        

                        <td><img src= <%= phone.image %> class="img-thumbnail" ></td>
                        
                        <td><%= phone.title %></td>
                        <td>$<%= phone.price %></td>
                        <td class="text-center"><%= phone.stock %></td>



                        </tr>
                        <%}); 
                        
                        %> 
                        </tbody>
                        </table>
                    </div>
                  </div>
                  
                  <div class="col-md-6 float-right border "> 
                    <div class="p-3">
                      <h2>Best seller</h2>
                      <table class="table">
                        <thead>
                        <tr>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Price</th>
                            <th>Rating</th>
                        </tr>
                        </thead>
                        <tbody>
                          <% highestRatingList.forEach(phone =>{%>
                            <tr id= <%=phone._id %> onclick= "window.location.href='/item?id=<%=phone._id %>'">
 
                            <td><img src= <%= phone.image %> class="img-thumbnail" ></td>
                            <td><%= phone.title %></td>
                            <td>$<%= phone.price %></td>
                            <td class="text-center"><%= Math.round(phone.avgRating*100)/100 %></td>
    
                            </tr>
                            <%}); 
                            
                            %>
                        </tbody>
                        </table>

                    </div>
                  </div>
                </div>
              </div>

        </section>
        <!-- Footer-->
        <footer class="py-5 bg-dark">
            <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Your Website 2023</p></div>
        </footer>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="javascript/searchbutton.js"></script>

    </body>
</html>
