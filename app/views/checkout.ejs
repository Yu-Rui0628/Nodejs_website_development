<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

        <title>Cart</title>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.css" rel="stylesheet" />
        <style>
            body {
                background-color: #f8f9fa;
            }
            
            .checkout.cart {
                max-width: 800px;
                margin: 50px auto;
                padding: 20px;
                background-color: #ffffff;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                border-radius: 5px;
            }
            
            h2 {
                font-weight: bold;
                margin-bottom: 20px;
                text-align: center;
            }
            
            .table thead th {
                background-color: #007bff;
                color: #ffffff;
                font-weight: bold;
            }
            
            .table tbody tr:nth-child(even) {
                background-color: #f2f2f2;
            }
            
            .d-flex {
                align-items: center;
            }
            
            .mt-3 {
                margin-top: 20px;
            }

        </style>
    </head>
    <body style="background: url('images/homeBg.jpg')">

        <div class="checkout cart">
            <h2>Cart</h2>
            <div class="col-md float-left border">
                <div class="p-3">
                    <input type="hidden" id="itemsData" value='<%= JSON.stringify(items) %>'>
                    <table class="table table-bordered" id = "main-table">
                        <thead>
                            <tr>
                                <th>Select</th>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="mt-3">
                <button type="button" id = "remove" class="btn btn-primary">Remove</button>
                <p class="mt-2" id = "total_price"></p>
                <% if(loginstatus){%>
                    <% if(items.length==0){%>
                        <p> Cart is empty</p>
                        <%}else{%>
                            <button type="button" class="btn btn-primary" id = "confirm">Confirm</button>
                            <% } %>
                <% }else{ %>
                <p> Have not login </p>
                    <% }%>
                <button type="button" class="btn btn-primary" id = "back">Back</button>
            </div>
        </div>
        <script src="javascript/checkout.js">

        </script>

    </body>
</html>
